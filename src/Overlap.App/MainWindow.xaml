<Window x:Class="Overlap.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlap Radar"
        Width="220"
        Height="340"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown"
        MouseWheel="Window_MouseWheel"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border x:Name="MoveBorder" BorderBrush="#66D0D0D0" BorderThickness="1" Background="#22000000" Visibility="Collapsed" CornerRadius="8"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,8,0,0">
            <TextBlock x:Name="StatusText" Foreground="#CCFFFFFF" FontSize="12" HorizontalAlignment="Center" />
            <TextBlock x:Name="ModeText" Foreground="#88FFFFFF" FontSize="10" HorizontalAlignment="Center" />
        </StackPanel>

        <Canvas x:Name="RadarCanvas" Width="140" Height="260" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,26,0,18" />

        <Button x:Name="LockButton"
                Width="24"
                Height="24"
                FontSize="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,8,8"
                Content="ðŸ”’"
                Click="LockButton_Click"
                Visibility="Collapsed" />

        <TextBlock x:Name="DragHint"
                   Text="Drag"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Margin="8,0,0,8"
                   Foreground="#88FFFFFF"
                   FontSize="10"
                   Visibility="Collapsed" />
    </Grid>
</Window>
